<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainFrame"
    tools:context="com.example.jose.connect3.MainActivity">

<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*">
    <TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcomeString"
        android:id="@+id/textView_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    </TableRow>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_newgameString"
        android:onClick="newGame"
        android:id="@+id/Button_newgame" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="*"
        >    <Chronometer android:id="@+id/chrono" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center"/>

        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_0"
                android:visibility="invisible"
                android:onClick="onPress" />
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_1"
                android:visibility="invisible"
                android:onClick="onPress"/>
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_2"
                android:visibility="invisible"
                android:onClick="onPress"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_3"
                android:visibility="invisible"
                android:onClick="onPress"/>
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_4"
                android:visibility="invisible"
                android:onClick="onPress"/>
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_5"
                android:visibility="invisible"
                android:onClick="onPress"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_6"
                android:visibility="invisible"
                android:onClick="onPress"/>
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_7"
                android:visibility="invisible"
                android:onClick="onPress"/>
            <Button
                android:layout_width="fill_parent" android:layout_height="fill_parent"
                android:id="@+id/button_8"
                android:visibility="invisible"
                android:onClick="onPress"/>
        </TableRow>

    </TableLayout>

</TableLayout>

</RelativeLayout>
